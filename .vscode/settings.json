{
  "editor.rulers": [80],
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/build": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "flow.useNPMPackagedFlow": true,
  "javascript.validate.enable": false,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
